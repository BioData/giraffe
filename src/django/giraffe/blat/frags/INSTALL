#!/bin/sh -x

# Compile frags.c:
gcc -O6 -o frags frags.c

install ./frags /usr/local/bin/giraffe-frags

# *** IMPORTANT, don't forget -O6, at least you should use -O2 ***

# You can generate afire.data, default.data using create_frag_db.py
# script, like:

python create_frag_db.py default > default.data
python create_frag_db.py afire > afire.data

mkdir -p /usr/local/share/giraffe
install -m 0444 default.data /usr/local/share/giraffe
install -m 0444 afire.data /usr/local/share/giraffe


# Then run
# ./frags afire.data sequence_file

